<%= simple_form_for(@turno, url: "#", method: "get", html: { disabled: true }) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
<%= render "shared/notice" %>
<div class="card">
  <div class="card-body">
    <%= render "turno", f: f, disabled: true %>
  </div>
  <div class="card-footer">
    <%= link_to t("common.actions.edit"), edit_turno_path(@turno), class: "btn btn-secondary" %>
    <%= link_to t("common.back"), turnos_path, class: "btn btn-light" %>
  </div>
</div>
<% end %>
