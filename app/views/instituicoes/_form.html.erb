
<%= simple_form_for(@instituicao) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :duracao_aula %>
    <%= f.input :tempos_aula %>
    <%= f.input :cnpj %>
    <%= f.input :inep %>
    <%= f.input :endereco %>
    <%= f.input :created_by %>
    <%= f.input :updated_by %>
    <%= f.input :deleted_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
