<!-- Form Customizado -->
<%= simple_form_for(@curso) do |f| %>
  <!-- Área de notificações -->
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= render "shared/notice" %>
  <!-- Card e formulário -->
  <div class="card">
    <div class="card-body">
      <%= render "curso", f: f %>
    </div>
    <div class="card-footer text-end text-end">
      <%= link_to t("common.back"), cursos_path, class: "btn btn-light" %>
      <%= btn_submit(f) %>
    </div>
  </div>
<% end %>