
<%= simple_form_for(@turma) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :descricao %>
    <%= f.input :vagas %>
    <%= f.association :matriz_curricular_aplicada %>
    <%= f.input :numero_efetivo_estudantes %>
    <%= f.input :sala_recorrente %>
    <%= f.association :turno %>
    <%= f.association :ambiente %>
    <%= f.input :created_by %>
    <%= f.input :updated_by %>
    <%= f.input :deleted_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
