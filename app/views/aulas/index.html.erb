    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.14.0/Sortable.min.js"></script>
    <script>
      $(document).ready(function() {
        function setupPrintButton() {
          document.getElementById("printGrade").addEventListener("click", () => {
            window.print()
          })
        }

        setupPrintButton()

        function buildSubjectCard(data, currentUses) {
          const maxUses = Math.floor(data.carga_horaria / 50);
          return `<div class="subject-card" data-id="${data.id}" data-current-uses="${currentUses}" data-max-uses="${maxUses}" data-ambiente-id="${data.room_id}" style="background-color: #DCEDC8;">
                    <p><strong>${data.descricao}</strong></p>
                    <p>Ambiente: ${data.room}</p>
                    <p class="aula-counter">Aula ${currentUses}/${maxUses}</p>
                  </div>`;
        }

        function buildTeacherCard(data, currentUses) {
          const maxUses = Math.floor(data.carga_horaria / 50);
          return `<div class="teacher-card" data-id="${data.id}" data-current-uses="${currentUses}" data-max-uses="${maxUses}" style="background-color: #DCEDC8;">
                    <p><strong>${data.nome}</strong></p>
                    <p class="aula-counter">Aula ${currentUses}/${maxUses}</p>
                  </div>`;
        }
          // Lista de cores claras para mat√©rias e professores
          const lightColors = [
            '#DCEDC8', '#7ca37c', '#49ab81', '#87A96B', '#8FBC8B', '#71BC78',
          ];

          // Fun√ß√£o para obter uma cor √∫nica com base no √≠ndice
          function getColor(index) {
              return lightColors[index % lightColors.length];
          }

          function createTurmaOptions() {
            const turmaSelect = $('#turma-select');
            // Clear any existing options and add the default one.
            turmaSelect.empty();
            turmaSelect.append($('<option>', { value: '', text: 'Selecione uma turma' }));

            // Create an object to store distinct turmas.
            let turmas = {};

            // Loop through subjects to gather distinct turma objects.
            subjects.forEach(subject => {
              // Use the turma_id as key.
              // Assuming each subject has a `turma` object with a `descricao` property.
              const turmaId = subject.turma_id;
              if (!turmas[turmaId]) {
                turmas[turmaId] = subject.turma.descricao;
              }
            });

            // Append an option for each distinct turma.
            for (let id in turmas) {
              turmaSelect.append($('<option>', { value: id, text: turmas[id] }));
            }
          }

          var subjects = JSON.parse('<%= raw(json_escape(@grades_curriculares)) %>');
          console.log(subjects);

          createTurmaOptions();
          $('#turma-select').select2();

          var teachers = JSON.parse('<%= raw(json_escape(@professores)) %>');
          console.log(teachers);

          function createSubjectCards() {
            const subjectsList = document.getElementById('subjects-list');
            subjects.forEach((subject, index) => {
              const maxUses = Math.floor(subject.weeklyminutes / 50);
              const card = document.createElement('div');
              card.className = 'subject-card';
              card.setAttribute('data-id', subject.id);
              card.setAttribute('data-subject', subject.name.toLowerCase().replace(/ /g, '-'));
              card.setAttribute('data-max-uses', maxUses);
              card.setAttribute('data-current-uses', '0');
              card.setAttribute('data-turma-id', subject.turma_id);
              card.setAttribute('data-ambiente-id', subject.room_id);
              card.style.backgroundColor = getColor(index);
              card.innerHTML = `
                <p><strong>${subject.name}</strong></p>
                <p>${subject.room}</p>
                <p>Aula 0/${maxUses}</p>
              `;
              subjectsList.appendChild(card);
            });
          }

          function createTeacherCards() {
            const teachersList = document.getElementById('teachers-list');
            teachers.forEach((teacher, index) => {
              const maxUses = Math.floor(teacher.weeklyminutes / 50);
              const card = document.createElement('div');
              card.className = 'teacher-card';
              card.setAttribute('data-id', teacher.id);
              card.setAttribute('data-teacher', teacher.name.toLowerCase().replace(/ /g, '-'));
              card.setAttribute('data-max-uses', maxUses);
              card.setAttribute('data-current-uses', '0');
              card.style.backgroundColor = getColor(index);
              card.innerHTML = `
                <p><strong>${teacher.name}</strong></p>
                <p>Aula 0/${maxUses}</p>
              `;
              teachersList.appendChild(card);
            });
          }

          function createScheduleTable() {
            const timeSlots = JSON.parse('<%= raw(json_escape(@horarios)) %>');
            const daysOfWeek = JSON.parse('<%= raw(json_escape(@dias)) %>');
            const table = document.getElementById('schedule');

            // Build table header
            const thead = table.querySelector('thead');
            thead.innerHTML = '';
            const headerRow = document.createElement('tr');
            const timeHeaderCell = document.createElement('th');
            timeHeaderCell.textContent = 'Hor√°rio';
            headerRow.appendChild(timeHeaderCell);

            const sortedDayKeys = Object.keys(daysOfWeek).sort((a, b) => parseInt(a) - parseInt(b));
            sortedDayKeys.forEach(key => {
              const dayHeaderCell = document.createElement('th');
              dayHeaderCell.textContent = daysOfWeek[key];
              headerRow.appendChild(dayHeaderCell);
            });
            thead.appendChild(headerRow);

            // Build table body
            const tbody = table.querySelector('tbody');
            tbody.innerHTML = '';

            timeSlots.forEach(timeSlot => {
              const row = document.createElement('tr');
              // Create time label cell
              const timeCell = document.createElement('td');
              timeCell.textContent = timeSlot;
              row.appendChild(timeCell);

              // Create a cell for each day
              sortedDayKeys.forEach(key => {
                const cell = document.createElement('td');
                const slotDiv = document.createElement('div');
                slotDiv.className = 'time-slot';
                // Save schedule info
                slotDiv.setAttribute('data-day', key);
                slotDiv.setAttribute('data-horario-inicio', timeSlot);
                slotDiv.setAttribute('data-horario-fim', timeSlot); // adjust if needed

                // Create a unique key for the cell (e.g. "day-time")
                slotDiv.setAttribute('data-cell-key', key + '-' + timeSlot);
                cell.appendChild(slotDiv);
                row.appendChild(cell);
              });
              tbody.appendChild(row);
            });
          }

          var scheduleAssignments = {};

          function checkTeacherConflicts() {
              const selectedTurma = $('#turma-select').val();
              if (!selectedTurma) return;

              const teacherSchedule = {};

              // Iterate through all time slots
              $('.time-slot').each(function() {
                  const cellKey = $(this).data('cell-key');
                  const teacherCard = $(this).find('.teacher-card');
                  if (teacherCard.length) {
                      const teacherId = teacherCard.data('id');
                      const teacherName = teacherCard.find('strong').text();

                      if (!teacherSchedule[teacherId]) {
                          teacherSchedule[teacherId] = [];
                      }

                      // Check for conflicts
                      if (teacherSchedule[teacherId].includes(cellKey)) {
                          showNotification(`Conflito: ${teacherName} est√° alocado em hor√°rios sobrepostos.`);
                      }

                      teacherSchedule[teacherId].push(cellKey);
                  }
              });
          }

          function organizeAssignmentsByTurma(assignmentsArray) {
              const organized = {};
              assignmentsArray.forEach(assignment => {
                const turma = assignment.turma_id;
                // Build a cell key ‚Äì for example, using day and horario_inicio:
                const cellKey = `${assignment.dia}-${assignment.horario_inicio}`;
                if (!organized[turma]) {
                  organized[turma] = {};
                }
                organized[turma][cellKey] = assignment;
              });
              return organized;
            }
            var savedAssignments = JSON.parse('<%= raw(json_escape(@saved_assignments.to_json)) %>');
            var organizedAssignments = organizeAssignmentsByTurma(savedAssignments);

      //          console.log(organizedAssignments);
            function populateScheduleFromSavedAssignments() {
              const selectedTurma = $('#turma-select').val();
              if (!selectedTurma) {
                console.log("No turma selected.");
                return;
              }

              if (!organizedAssignments[selectedTurma]) {
                console.log("No assignments found for turma", selectedTurma);
                return;
              }

              scheduleAssignments[selectedTurma] = organizedAssignments[selectedTurma];
              const turmaAssignments = organizedAssignments[selectedTurma];

              console.log("Populating assignments for turma:", selectedTurma, turmaAssignments);

              for (const cellKey in turmaAssignments) {
                const assignment = turmaAssignments[cellKey];
                console.log("Assignment for cell", cellKey, ":", assignment);

                const slotEl = document.querySelector(`.time-slot[data-cell-key="${cellKey}"]`);
                if (!slotEl) {
                  console.error(`No slot element found for cell key: ${cellKey}`);
                  continue;
                }

                // Clear any previously inserted cards to avoid duplication.
                slotEl.innerHTML = '';

                // Set the aula_id on the time-slot (important for deletion)
                if (assignment.aula_id) {
                  slotEl.setAttribute('data-aula-id', assignment.aula_id);
                }

                // Rebuild and insert the subject card if present.
                if (assignment.subject) {
                  let subjectHtml = assignment.subject.html;
                  if (!subjectHtml) {
                    console.warn("No HTML found for subject. Attempting to build card.");
                    subjectHtml = buildSubjectCard(assignment.subject, assignment.subject.currentUses || 0);
                  }
                  if (subjectHtml) {
                    slotEl.insertAdjacentHTML('beforeend', subjectHtml);
                  } else {
                    console.error("Failed to generate subject HTML");
                  }
                }

                // Rebuild and insert the teacher card if present.
                if (assignment.teacher) {
                  let teacherHtml = assignment.teacher.html;
                  if (!teacherHtml) {
                    console.warn("No HTML found for teacher. Attempting to build card.");
                    teacherHtml = buildTeacherCard(assignment.teacher, assignment.teacher.currentUses || 0);
                  }
                  if (teacherHtml) {
                    slotEl.insertAdjacentHTML('beforeend', teacherHtml);
