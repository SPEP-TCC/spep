
<%= simple_form_for(@restricao) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :turno %>
    <%= f.input :dia %>
    <%= f.input :horario %>
    <%= f.input :created_by %>
    <%= f.input :updated_by %>
    <%= f.input :deleted_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
