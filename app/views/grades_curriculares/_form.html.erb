
<%= simple_form_for(@grade_curricular) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :disciplina %>
    <%= f.input :carga_horaria %>
    <%= f.input :periodo_calendario %>
    <%= f.input :optativa %>
    <%= f.association :matriz_curricular_aplicada %>
    <%= f.association :user %>
    <%= f.input :created_by %>
    <%= f.input :updated_by %>
    <%= f.input :deleted_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
